{
  "name": "@docknetwork/crypto-wasm",
  "version": "0.1.0",
  "author": "Dock.io",
  "license": "Apache-2.0",
  "private": false,
  "description": "An implementation of BBS+ signatures, bilinear map accumulators and composite proof using rust compiled to wasm. This project started as fork of @mattrglobal/bbs-signatures",
  "homepage": "https://github.com/docknetwork/crypto-wasm",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/docknetwork/crypto-wasm",
  "browser": {
    "index.js": "lib/index.web.js"
  },
  "files": [
    "lib/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "scripts": {
    "install": "./scripts/install-dependencies.sh",
    "uninstall": "rm -rf node_modules && yarn clean",
    "clean": "rm -rf target && rm -rf lib",
    "build": "./scripts/build-package.sh DEBUG",
    "build:release": "./scripts/build-package.sh RELEASE",
    "test": "yarn test:browser && yarn test:node && yarn test:wasm",
    "test:browser": "./scripts/test-browser.sh",
    "test:wasm": "yarn jest",
    "benchmark:wasm": "ts-node ./bench/index.ts",
    "publish:unstable": "./scripts/publish-unstable.sh",
    "publish:release": "./scripts/publish.sh",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "version:release": "yarn version --minor --message \"chore(release): publish\""
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@stablelib/base64": "1.0.0",
    "@stablelib/benchmark": "1.0.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@wasm-tool/wasm-pack-plugin": "1.0.1",
    "conventional-changelog": "3.1.18",
    "conventional-changelog-cli": "2.0.31",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.5",
    "jest": "24.9.0",
    "prettier": "2.0.4",
    "pretty-quick": "2.0.1",
    "rollup": "2.49.0",
    "text-encoding": "0.7.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.4.1",
    "typescript": "3.7.5"
  }
}
